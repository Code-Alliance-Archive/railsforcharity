.container
  .row
    .span8
      %h3
        %span.slash //
        Get in Touch
      %p
        We want to hear from you! Just enter your name, email address, and message into the form below and send away.
      %br
      %h3
        %span.slash //
        Send a Message
      %br
      = simple_form_for @contact_us, :url => { :action => 'contact_us' }, :validate => true do |f|
        = f.input :name, :label => 'Your good name'
        = f.input :email, :label => 'Your awesome email', :placeholder => 'you@awesome.com'
        = f.input :description, :label => 'Please tell me', :as => 'text', :input_html => {:style => 'width: 90%', :rows => 10}
        = f.button :submit, "Submit", :class => 'btn btn-primary'

