.container
  .span6
    .row-fluid
      .span12
        %h3 Sign in through one of these services:
        %br
        %ul#authentications_list
          %li
            = link_to "user_omniauth_authorize_path(:facebook)" do
              = image_tag 'icons/providers/facebook.png', :size => "64x64", :alt => "Facebook"
              Facebook
          %li
            = link_to "user_omniauth_authorize_path(:google_oauth2)" do
              = image_tag 'icons/providers/google.png', :size => "64x64", :alt => "Google"
              Google
        %br
    %br
      %hr
    .row-fluid
      .span6
        %h3 Sign up
        %br
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      %div
        = f.label :email
        = f.email_field :email
      %div
        = f.label :password
        = f.password_field :password
      %div
        = f.label :password_confirmation
        = f.password_field :password_confirmation
      %div= f.submit "Sign up", :class => 'btn btn-primary'
    = render "devise/shared/links"
