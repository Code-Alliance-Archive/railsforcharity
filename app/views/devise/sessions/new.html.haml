.container
  .span6
    .row-fluid
      .span12
        %h3 Sign in through one of these services:
        %br
        %ul#authentications_list
          %li
            = link_to "user_omniauth_authorize_path(:facebook)" do
              = image_tag 'icons/providers/facebook.png', :size => "64x64", :alt => "Facebook"
              Facebook
          %li
            = link_to "user_omniauth_authorize_path(:google_oauth2)" do
              = image_tag 'icons/providers/google.png', :size => "64x64", :alt => "Google"
              Google
        %br
    %br
      %hr
    .row-fluid
      .span6
        %h3 Sign in
        %br   
        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          %div
            = f.label :email
            = f.email_field :email
          %div
            = f.label :password
            = f.password_field :password
          - if devise_mapping.rememberable?
            = f.check_box :remember_me
            = f.label :remember_me
          %div= f.submit "Sign in", :class => 'btn btn-primary'
        = render "devise/shared/links"