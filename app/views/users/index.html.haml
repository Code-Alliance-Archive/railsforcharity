.row
  .span12
    %h1 Members
    %br
    - @users.each do |user|
      %ul.thumbnails
        %li.span4
          .thumbnail
            - if user.avatar
              = link_to image_tag(user.avatar.image_url(:thumb).to_s), user_path(user)
            -else
              = image_tag 'default.png'
            .caption
              %h3= user.name
              %p= user.bio