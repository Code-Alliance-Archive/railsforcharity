%a.btn.btn-navbar(data-target='.nav-collapse' data-toggle='collapse')
  %span.icon-bar
  %span.icon-bar
  %span.icon-bar
%a(href='/' class='brand')
  %span(style='color:red') Rails
  %span(style='color:white') for
  %span(style='color:lightgreen') Charity
.nav-collapse
  %ul.pull-left.nav
    - if !user_signed_in?
      %li
        = link_to t('views.layouts._navigation.home'), root_path
      %li
        = link_to t('views.layouts._navigation.how_it_works'), how_it_works_path
      %li
        = link_to t('views.layouts._navigation.faq'), faq_path
      %li
        = link_to t('views.layouts._navigation.supporters'), supporters_path
      -#%li
      -#  = link_to t('views.layouts._navigation.blog'), blog_path
      %li
        = link_to t('views.layouts._navigation.contact_us'), contact_path
  %ul.pull-right.nav
    %li
      = link_to t('views.layouts._navigation.submit_project'), new_project_path
    %li
      = link_to t('views.layouts._navigation.projects'), projects_path
    %li
      -#= link_to t('views.layouts._navigation.browse_tasks'), tasks_path
    %li
      = link_to t('views.layouts._navigation.new_task'), new_task_path
    - if user_signed_in?
      %li.dropdown
        %a.dropdown-toggle(href='#' data-toggle='dropdown') #{t('views.layouts._navigation.user_settings')}
        %ul.dropdown-menu(aria-labelledby='dLabel' role='menu')
          %li
            = link_to t('views.layouts._navigation.edit_profile'), edit_user_path(current_user)

      = link_to t('views.layouts._navigation.log_out'), destroy_user_session_path, :method => 'delete', :class => 'btn btn-danger'
    - else
      = link_to t('views.layouts._navigation.log_in'), new_user_session_path, :class => 'btn btn-warning'
    - if user_not_signed_in?
      = link_to t('views.layouts._navigation.sign_up'), new_user_registration_path, :class => 'btn btn-success'