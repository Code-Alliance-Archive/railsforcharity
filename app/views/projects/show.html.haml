.container
  .row
    .span3
      .pull-left
        - if @project.avatar
          = image_tag @project.avatar.image_url(:thumb).to_s
        %br
        %br
        %h2{style:"color:#880000"}
          = @project.name
        %br
        = @project.title
        %br
        %a{:href => @project.website, :target => "_blank"}
          = @project.website
        %br
          %a{:href => "https://github.com/railsforcharity/railsforcharity", :target => "_blank"}
            %p Browse Github Source Code
          %a{:href => "http://travis-ci.org/railsforcharity/railsforcharity"}
            %img{:alt => "Build Status", :src => "https://secure.travis-ci.org/railsforcharity/railsforcharity.png", :height => "20px"}/
        %br
        %h3 Project Categories
        -@project.tags.map(&:name).each do |tag|
          %p.label #{tag}
        %br

    .span9
      .span5
        %a.btn.btn-inverse.btn-small.disabled{:href => "(vote_project_path(project, type: up)"}
          %i.icon-white.icon-hand-up
        %a.btn.btn-failure.btn-small{:href => "#"}
          %i.icon-hand-down
        = pluralize @project.reputation_value_for(:votes).to_i, "vote"
        %br
      .span2
        .pull-right
          .btn.btn-success.btn-large Join
      .span1
        .pull-left
          .btn.btn.btn-large Donate
